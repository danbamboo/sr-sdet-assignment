{
  "consumer": {
    "name": "dashboard_api"
  },
  "provider": {
    "name": "billing_service"
  },
  "interactions": [
    {
      "description": "A request for an billing subscription",
      "providerState": "Billing subscriptions exist for user ID",
      "request": {
        "method": "get",
        "path": "/subscriptions",
        "query": "user_id=1"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "user_id": 1,
          "renewal_date": "11/03/2023",
          "price_cents": 1500
        },
        "matchingRules": {
          "$.body": {
            "match": "type"
          }
        }
      }
    },
    {
      "description": "A request for an billing subscription",
      "providerState": "Billing subscriptions do not exist for user ID",
      "request": {
        "method": "get",
        "path": "/subscriptions",
        "query": "user_id=0"
      },
      "response": {
        "status": 404,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "message": "No subscription found for user_id [0]"
        },
        "matchingRules": {
          "$.body": {
            "match": "type"
          }
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}